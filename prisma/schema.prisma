// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model Post {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())

    content  String @db.VarChar(255)
    authorId String

    @@index([authorId])
}

model City {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())

    attractions Attraction[]
    authorId    String
    description String?
    name        String

    users User[]

    @@index([authorId])
}

model Attraction {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())

    name        String
    description String?
    city        City?   @relation(fields: [cityId], references: [id])
    cityId      String?
    imageURL    String
    authorId    String

    upvotes Upvotes[]

    @@index([cityId])
}

model User {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())

    authorId String
    email    String @unique
    name     String

    cities  City[]
    Upvotes Upvotes[]

    @@index([id])
}

model Upvotes {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())

    attraction   Attraction @relation(fields: [attractionId], references: [id])
    attractionId String

    user   User   @relation(fields: [userId], references: [id])
    userId String

    @@index([attractionId])
    @@index([userId])
}
