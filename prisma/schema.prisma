// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model Post {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())

    content  String @db.VarChar(255)
    authorId String

    @@index([authorId])
}

model City {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())

    attractions     Attraction[]
    recommendedDays RecommendedDaysInCity[]

    authorId    String
    description String?
    name        String  @unique

    @@index([authorId])
}

model Attraction {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())

    name        String
    description String?
    city        City?   @relation(fields: [cityId], references: [id])
    cityId      String?
    imageURL    String
    authorId    String

    upvotes Upvotes[]

    @@index([cityId])
}

model Upvotes {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())

    attraction   Attraction @relation(fields: [attractionId], references: [id])
    attractionId String

    userId String

    @@unique([attractionId, userId]) // https://www.prisma.io/docs/concepts/components/prisma-schema/data-model#defining-a-unique-field
    @@index([attractionId])
    @@index([userId])
}

model RecommendedDaysInCity {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())

    city            City   @relation(fields: [cityId], references: [id])
    cityId          String
    recommendedDays Int

    userId String

    @@unique([cityId, userId])
    @@index([cityId])
    @@index([userId])
}
